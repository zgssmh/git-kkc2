#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/node" ]; then
  "$basedir/node"  "$basedir/../../../_node-sass-china@4.7.2@node-sass-china/bin/node-sass" "$@"
  ret=$?
else 
  node  "$basedir/../../../_node-sass-china@4.7.2@node-sass-china/bin/node-sass" "$@"
  ret=$?
fi
exit $ret
